<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:context = "http://www.springframework.org/schema/context"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans     
   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
   http://www.springframework.org/schema/context 
   http://www.springframework.org/schema/context/spring-context-4.0.xsd">
   
   <!-- Dependent Class -->
   <bean id="dt" class="java.util.Date" scope="singleton"> </bean>
   
   <!-- Target Class -->
   <bean id="wmg" class="com.ms.target.WishMessagegenerator" scope="singleton">
   <property name="date" ref="dt"></property>
   </bean>
   
   <!-- Target Class -->
   <bean id="wmg1" class="com.ms.target.WishMessagegenerator" scope="singleton">
   <property name="date" ref="dt"></property>
   </bean>
   
</beans>
